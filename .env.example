# Example Environment Configuration
# Copy this file to .env, .env.dev, .env.test, or .env.prod and update values accordingly

# Application
NODE_ENV=development
PORT=3001
APP_NAME=NestJS Template

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name?schema=public

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OTP
OTP_SECRET=your_otp_secret_here
OTP_EXPIRATION=5
OTP_STEP=30
OTP_DIGITS=6

# SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
SMTP_SECURE=false

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Swagger
SWAGGER_USER=admin
SWAGGER_PASSWORD=admin

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
SESSION_SECRET=your_session_secret_at_least_32_characters_long

# Storage (MinIO/S3)
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# AWS S3 (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_bucket_name

# SMS Configuration (SMS Masivos API)
SMS_MASIVOS_API_URL=https://app.smsmasivos.com.mx/sms/send
SMS_MASIVOS_API_KEY=your_sms_api_key

# Email Configuration for different environments
EMAIL_PROVIDER=mailhog
EMAIL_PRODUCTION_PROVIDER=resend

# Resend Configuration (for production)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_API_URL=https://api.resend.com/emails

# Throttling
THROTTLER_TTL=60
THROTTLER_LIMIT=10

# Logging level
LOG_LEVEL=info
