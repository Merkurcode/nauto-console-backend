# Example Environment Configuration
# Copy this file to .env, .env.dev, .env.test, or .env.prod and update values accordingly

# Application
NODE_ENV=development
PORT=3001
APP_NAME=NestJS Template
API_URL=http://localhost:3001
API_VERSION=v1

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name?schema=public

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OTP
OTP_SECRET=your_otp_secret_here
OTP_EXPIRATION=5
OTP_STEP=30
OTP_DIGITS=6

# SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
SMTP_SECURE=false

# Frontend URLs and Paths
FRONTEND_URL=http://localhost:3000
FRONTEND_LOGIN_PATH=/login
FRONTEND_PASSWORD_RESET_PATH=/reset-password
FRONTEND_EMAIL_VERIFICATION_PATH=/verify-email
FRONTEND_DASHBOARD_PATH=/dashboard

# Swagger
SWAGGER_USER=admin
SWAGGER_PASSWORD=admin

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
SESSION_SECRET=your_session_secret_at_least_32_characters_long

# Storage (MinIO/S3)
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# AWS S3 (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_bucket_name

# SMS Configuration (SMS Masivos API)
SMS_MASIVOS_API_URL=https://app.smsmasivos.com.mx/sms/send
SMS_MASIVOS_API_KEY=your_sms_api_key

# Email Configuration for different environments
EMAIL_PROVIDER=mailhog
SUPPORT_EMAIL=support@yourdomain.com
NO_REPLY_EMAIL=noreply@yourdomain.com

# Email Template Configuration
EMAIL_COMPANY_LOGO_URL=https://riaowrkbfhrhwcwqnamr.supabase.co/storage/v1/object/public/assets//logo%20nauto%20sin%20letras.png
EMAIL_PRIMARY_COLOR=ea337e
EMAIL_SECONDARY_COLOR=9fb2ec

# Resend Configuration (for production)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_API_URL=https://api.resend.com/emails

# Throttling
THROTTLER_TTL=60
THROTTLER_LIMIT=10

# Logging level
LOG_LEVEL=info

# Business Configuration
# =======================

# Email Verification
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_EXPIRY_MINUTES=60

# Password Security
PASSWORD_SALT_ROUNDS=12
PASSWORD_RESET_EXPIRY_MINUTES=30
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting (Login/Auth attempts)
RATE_LIMIT_EMAIL_ATTEMPTS=3
RATE_LIMIT_IP_ATTEMPTS=10
RATE_LIMIT_LOCKOUT_MINUTES=15

# File Storage
FILE_URL_EXPIRY_HOURS=24
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,png,pdf,doc,docx,xlsx,xls

# Session Management
# MAX_ACTIVE_SESSIONS: Number of concurrent sessions allowed per user (-1 for unlimited)
MAX_ACTIVE_SESSIONS=3
# SESSION_INACTIVITY_TIMEOUT: Minutes before session expires due to inactivity (-1 to disable)
SESSION_INACTIVITY_TIMEOUT=120
SESSION_EXTEND_ON_ACTIVITY=true

# Address Defaults
DEFAULT_COUNTRY=null
DEFAULT_STATE=null
REQUIRE_FULL_ADDRESS=false

# OTP/2FA Configuration
OTP_ENABLED=true
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_SECRET_LENGTH=32

# Feature Flags
AUDIT_LOGGING_ENABLED=true
MAINTENANCE_MODE=false
