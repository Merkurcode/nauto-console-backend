{
  "name": "nestjs-template",
  "version": "0.1.0",
  "description": "A comprehensive NestJS template with Clean Architecture, DDD, CQRS, JWT authentication, role-based authorization, email verification, PostgreSQL, and Prisma ORM",
  "author": "Valerii Checha",
  "email": "chechavalera@gmail.com",
  "url": "https://www.linkedin.com/in/v-checha/",
  "private": true,
  "license": "MIT",
  "keywords": [
    "nestjs",
    "typescript",
    "authentication",
    "authorization",
    "clean-architecture",
    "cqrs",
    "ddd",
    "prisma",
    "postgresql",
    "jwt",
    "boilerplate",
    "starter-kit",
    "file-storage",
    "i18n"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development NODE_OPTIONS=\"--max-old-space-size=2048 --max-semi-space-size=64\" nest start --watch",
    "start:dev:win": "powershell -ExecutionPolicy Bypass -File ./scripts/start-dev-simple.ps1",
    "start:dev:win-gc": "powershell -ExecutionPolicy Bypass -File ./scripts/start-dev.ps1",
    "start:test": "cross-env NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=1024 --max-semi-space-size=32\" nest start --watch",
    "start:prod": "cross-env NODE_ENV=production node --max-old-space-size=4096 --max-semi-space-size=128 --expose-gc dist/src/main",
    "start:debug": "cross-env NODE_ENV=development NODE_OPTIONS=\"--max-old-space-size=2048 --max-semi-space-size=64\" nest start --debug --watch",
    "start:debug:win": "powershell -ExecutionPolicy Bypass -File ./scripts/start-debug.ps1",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"**/*.spec.ts\" --ignore-pattern \"**/*.test.ts\" --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
    "test:all": "npm run test && npm run test:e2e",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "db:migrate:test": "cross-env NODE_ENV=test prisma migrate dev --name init",
    "db:migrate:prod": "cross-env NODE_ENV=production prisma migrate deploy",
    "db:push": "prisma db push",
    "db:push:test": "cross-env NODE_ENV=test prisma db push",
    "db:push:prod": "cross-env NODE_ENV=production prisma db push",
    "db:seed": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:seed:test": "cross-env NODE_ENV=test ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:seed:prod": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:studio": "npx prisma studio",
    "db:studio:test": "cross-env NODE_ENV=test npx prisma studio",
    "db:studio:prod": "cross-env NODE_ENV=production npx prisma studio",
    "docker:start": "docker-compose up -d",
    "docker:start:admin": "docker-compose --profile admin up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:status": "docker-compose ps",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:dev": "./scripts/docker-dev.sh",
    "prepare": "husky install",
    "wclaude": "npx win-claude-code@latest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@aws-sdk/lib-storage": "^3.787.0",
    "@aws-sdk/s3-request-presigner": "^3.787.0",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^11.0.15",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.15",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.1.0",
    "@prisma/client": "^6.5.0",
    "@types/busboy": "^1.5.4",
    "@types/lru-cache": "^7.10.10",
    "@types/multer": "^1.4.12",
    "async-mutex": "^0.5.0",
    "bcrypt": "^5.1.1",
    "busboy": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express-basic-auth": "^1.2.1",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "lru-cache": "^11.1.0",
    "minio": "^8.0.5",
    "multer": "^1.4.5-lts.2",
    "nestjs-i18n": "^10.5.1",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "bullmq": "^5.0.0",
    "redis": "^5.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.17",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.12.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
